<p>
  <strong>Symbol:</strong>
  <%= @stock.symbol %>
</p>

<p>
  <strong>Quantity:</strong>
  <%= @stock.quantity %>
</p>

<p>
  <strong>Price per Share at Open:</strong>
  <%= @stock.open_price %>
</p>

<p>
  <strong>Current Price per Share:</strong>
  <% if @stock.share_price > @stock.open_price %>
    <font color="green"> <%= @stock.share_price %> </font>
  <% elsif @stock.share_price < @stock.open_price %>
    <font color="red"> <%= @stock.share_price %> </font>
  <% else %>
    <font color="gray"> <%= @stock.share_price %> </font>
  <% end %>
</p>

<p>
  <strong>Current Total Price:</strong>
  <% if @stock.share_price > @stock.open_price %>
    <font color="green"> <%= @totalval %> </font>
  <% elsif @stock.share_price < @stock.open_price %>
    <font color="red"> <%= @totalval %> </font>
  <% else %>
    <font color="gray"> <%= @totalval %> </font>
  <% end %>
</p>

<%= link_to "Refresh Stock Data", stock_path, method: :put, id: @stock.id %></a>
